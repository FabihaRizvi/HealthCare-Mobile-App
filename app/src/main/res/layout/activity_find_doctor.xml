<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".FindDoctorActivity">

    <TextView
        android:id="@+id/healthCareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/healthcareheading"
        android:textColor="@color/headingGrey"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/findTopDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/top_doctors"
        android:textColor="@color/secondHeadingGrey"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>